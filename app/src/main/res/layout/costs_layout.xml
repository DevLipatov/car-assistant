<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            style="@style/app_inscriptio_style"/>

        <EditText
            android:layout_width="200dp"
            android:id="@+id/editDate"
            style="@style/app_edit_text_style"
            android:onClick="setDate"
            android:clickable="false"
            android:textIsSelectable="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            style="@style/app_inscriptio_style"/>

        <Spinner
            android:layout_width="200dp"
            android:id="@+id/spinnerCategory"
            style="@style/app_edit_text_style"
            android:spinnerMode="dialog">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost^ "
            style="@style/app_inscriptio_style"/>

        <EditText
            android:layout_width="150dp"
            android:id="@+id/editCost"
            style="@style/app_edit_text_style"
            android:inputType="numberSigned"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_label_comment"
            android:layout_gravity="center"
            style="@style/app_inscriptio_style"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/editComment"
            android:imeOptions="actionDone"
            style="@style/app_edit_text_style"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new costs"
        android:textSize="18sp"
        android:layout_margin="@dimen/main_app_margin"
        android:layout_gravity="center"
        android:onClick="onAddNewCosts"/>

</LinearLayout>