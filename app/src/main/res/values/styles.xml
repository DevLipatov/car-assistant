<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_text_appearance">
        <item name="android:textColor">@color/colorMenuTextPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="app_inscriptio_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:layout_margin">@dimen/main_app_margin</item>
    </style>

    <style name="app_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/main_app_margin</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingLeft">@dimen/edit_cursor_padding</item>
        <item name="android:paddingRight">@dimen/edit_cursor_padding</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="app_table_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/main_app_margin</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="app_list_item_style">
        <item name="android:layout_margin">@dimen/main_app_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

</resources>
